<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".ShareAndSaveActivity">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="5dp"
            android:id="@+id/img_back_fb_slider"
            android:src="@drawable/icon_back"
            android:layout_width="24dp"
            android:layout_height="38dp"/>
        <TextView
            android:layout_weight="1"
            android:text="Share &amp; Save"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_new_share_save"
            android:text="@string/new_"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_v"
        android:layout_width="160dp"
        android:layout_height="160dp"/>
    <TextView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:text="@string/save_to_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/share"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_share_fb"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/share_facebook"
        android:layout_width="320dp"
        android:layout_height="60dp"/>
    <ImageView
        android:id="@+id/img_share_yt"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/share_youtube"
        android:layout_width="320dp"
        android:layout_height="60dp"/>
    <ImageView
        android:id="@+id/img_share_tw"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/share_twitch"
        android:layout_width="320dp"
        android:layout_height="60dp"/>
</LinearLayout>